{
	"name": "stock-journal",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
		"preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
		"db:generate": "npx drizzle-kit generate",
		"db:push": "npx drizzle-kit migrate",
		"studio": "drizzle-kit studio --config drizzle.config.local.ts",
		"seed:journals": "tsx scripts/seed-journals.ts"
	},
	"dependencies": {
		"@auth/d1-adapter": "^1.10.0",
		"@opennextjs/cloudflare": "^1.3.0",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.5",
		"drizzle-zod": "^0.8.3",
		"ipaddr.js": "^2.2.0",
		"next": "15.4.6",
		"next-auth": "^5.0.0-beta.29",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"use-debounce": "^10.0.6",
		"zod": "^4.1.12",
		"zod-form-data": "^3.0.1"
	},
	"devDependencies": {
		"@eslint/eslintrc": "^3",
		"@tailwindcss/postcss": "^4",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^20.19.17",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"better-sqlite3": "^12.4.1",
		"drizzle-kit": "^0.31.5",
		"eslint": "^9",
		"eslint-config-next": "15.4.6",
		"tailwindcss": "^4",
		"tsx": "^4.20.6",
		"typescript": "^5",
		"wrangler": "^4.40.3"
	}
}
